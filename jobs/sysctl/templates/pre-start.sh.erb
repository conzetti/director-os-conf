#!/bin/bash

set -ex

# store the custom sysctl in sysctl.d so that they automatically go into effect at boot
cat > /etc/sysctl.d/<%= p("sysctl_conf_prefix") %>-bosh-director-os-conf-sysctl.conf <<EOF
# Autogenerated by bosh director-os-conf-release sysctl. Do not edit.
<%= p("sysctl").join "\n" %>
EOF

# reapply all sysctls now (including the ones we just stored above)
sysctl --system
